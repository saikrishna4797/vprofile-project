pipeline {
    agent any
    
    tools {
        maven 'maven'
    }

    stages {
        stage('checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/saikrishna4797/vprofile-project.git'
            }
        }
        stage('build') {
            steps {
                sh 'mvn clean package'    
            }
        }
        stage('Docker image') {
            steps {
                script {
                     sh 'docker build -t vprofile .'
                }
            }
        }
        stage('Docker container') {
            steps {
                script {
                     sh ' docker run -dit -p8081:8080 --name c1 vprofile'
                }
            }
        }
    }
}
